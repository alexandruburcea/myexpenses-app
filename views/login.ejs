<html>

<head>
	<%- include('head'); %>
</head>

<body class="bg-color">
	<div class="container">
		<div class="row">
			<div id="login-container" class="col-xs-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
				<form action="/login" , method="POST">
					<div class="logo"></div>
					<div class="form-group"><br>
						<h1 class="center montserrat">Log In</h1>
						<input type="text" class="form-control" name="username" placeholder="Username" autocomplete="off"
							required>
						<input type="password" class="form-control" name="password" placeholder="Password" required>
					</div>
					<div class="custom-control custom-checkbox mb-3">
						<input type="checkbox" class="custom-control-input" id="customCheck1">
						<label class="custom-control-label" for="customCheck1">Remember password</label>
					</div><br>
					<button class="btn btn-block btn-primary btn-center text-uppercase" type="submit">Login</button>
					<p style="margin-top:2vw" class="center"><a href="/signup">Sign Up</a></p>
					<div style="margin-top:2vw"  class="google-sign-up">
						<a href="#">
						<div class="google-logo"></div>
						<p class="center">Sign Up with Google</p>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>

</html>