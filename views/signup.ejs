<html>

<head>
    <%- include('head'); %>
</head>

<body class="bg-color">
    <div class="container">
        <div class="row">
            <div id="login-container" class="col-xs-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="logo"></div>
                <h1 style="margin-top:10%;" class="center montserrat">Sign Up</h1>
                <% if (typeof errors != 'undefined') { %>
                <% for(var i=0; i < errors.length; i++) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errors[i].msg %>
                </div>
                <% } %>
                <% } %>
                <% if (typeof uniqueErrors != 'undefined') { %>
                <% if (typeof uniqueErrors.errors.username != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <%= uniqueErrors.errors.username.message %>
                </div>
                <% } %>
                <% if (typeof uniqueErrors.errors.email != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <%= uniqueErrors.errors.email.message %>
                </div>
                <% } %>
                <br>
                <% } %>
                <form action="/signup" method="post">
                    <div class="form-group">
                        <h4 class="white center">Sign Up</h4>
                        <input type="text" class="form-control" name="username" placeholder="Enter Username"
                            autocomplete="off" required>
                        <small id="usernameHelp" class="form-text text-muted">5-15 characters</small>
                        <input type="email" class="form-control" name="email" placeholder="Enter Email Address"
                            autocomplete="off" required>
                        <small id="emailHelp" class="form-text text-muted">name@example.com</small>
                        <input type="password" class="form-control" name="password" placeholder="Enter Password"
                            required>
                        <small id="passwordHelp2" class="form-text text-muted">6-50 characters. One lowercase,
                            uppercase, number and special character</small>
                    </div>
                    <button type="submit" class="btn btn-block btn-success btn-center text-uppercase">Sign Up</button>
                    <p style="margin-top:2vw" class="center"><a href="/login">Back to login</a></p>
                </form>
            </div>
        </div>
    </div>
</body>

</html>